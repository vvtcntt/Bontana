<script>
    function getImage(images, cl) {
        $("#imgThumb a").html('<img src=' + images + ' class="small" alt="" />');
        $("#listImageProduct ul li").removeClass("setImages");
        $("." + cl).addClass("setImages");
        return true;
    }
</script>